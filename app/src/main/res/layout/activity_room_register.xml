<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.untaek.oneroom.act.RoomRegisterActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="437dp"
        android:orientation="vertical"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp">

        <EditText
            android:id="@+id/editText13"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:hint="주거 형태"
            android:inputType="textPersonName"
            app:layout_constraintTop_toBottomOf="@+id/editText12"
            tools:layout_editor_absoluteX="16dp" />

        <EditText
            android:id="@+id/editText11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="8dp"
            android:ems="10"
            android:hint="주소"
            android:inputType="textPersonName"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/editText12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:hint="층수"
            android:inputType="textPersonName"
            app:layout_constraintTop_toBottomOf="@+id/editText11"
            tools:layout_editor_absoluteX="16dp" />

        <EditText
            android:id="@+id/editText14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:hint="평수"
            android:inputType="textPersonName"
            app:layout_constraintTop_toBottomOf="@+id/editText13"
            tools:layout_editor_absoluteX="16dp" />

        <EditText
            android:id="@+id/editText16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:hint="편의 시설"
            android:inputType="textPersonName"
            app:layout_constraintTop_toBottomOf="@+id/editText15"
            tools:layout_editor_absoluteX="16dp" />

        <EditText
            android:id="@+id/editText15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:hint="주차 가능 여부"
            android:inputType="textPersonName"
            app:layout_constraintTop_toBottomOf="@+id/editText14"
            tools:layout_editor_absoluteX="16dp" />

        <EditText
            android:id="@+id/editText17"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:hint="그 외 옵션"
            android:inputType="textPersonName"
            app:layout_constraintTop_toBottomOf="@+id/editText16"
            tools:layout_editor_absoluteX="16dp" />

        <Button
            android:id="@+id/button_add_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="사진 넣기" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
